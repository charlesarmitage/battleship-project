<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:clickable="false"
              android:focusable="false"
              android:focusableInTouchMode="false"
              android:background="@drawable/blue_sea">
    <TextView
        android:id="@+id/available_ships"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Available ships: "
        android:textColor="#FFFFFF"
        />

    <com.cjra.battleship_project.GraphicalDeploymentView
        android:id="@+id/fleet_deployment"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/deployment_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:background="@drawable/battle_button"/>

    <TextView
        android:id="@+id/bottom_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bottom Text"
        android:textColor="#FFF"
        />

    <TextView
        android:id="@+id/debug_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Touch coords: "
        android:textColor="#FFF"
        android:layout_gravity="left|center_vertical" />
</LinearLayout>
